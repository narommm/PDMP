<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Login">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/constraint_layout"
        android:background="@drawable/fondo_principal">

        <ImageView
            android:id="@+id/personaje_principal_view"
            android:layout_width="290dp"
            android:layout_height="160dp"
            android:layout_marginTop="@dimen/login_top_image_margin"
            android:src="@drawable/personaje_principal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_name_aplication"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_sans_extrabold"
            android:text="@string/name_game"
            android:textColor="@android:color/background_light"
            android:textSize="@dimen/medium_35_sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/personaje_principal_view" />

        <Button
            android:id="@+id/bt_misiones"
            android:layout_width="230dp"
            android:layout_height="47dp"
            android:layout_marginTop="@dimen/large_margin"
            android:background="@color/verdeBotones"
            android:fontFamily="@font/nunito_sans_extrabold"
            android:text="@string/txt_inicio_sesion"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_name_aplication" />


        <ImageView
            android:id="@+id/imagePlanet1"
            android:layout_width="73dp"
            android:layout_height="68dp"
            android:layout_marginStart="40dp"
            android:src="@drawable/planeta_tierra_boton"
            app:layout_constraintBottom_toBottomOf="@+id/bt_misiones"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/bt_misiones" />

        <Button
            android:id="@+id/bt_registro_actividad"
            android:layout_width="230dp"
            android:layout_height="47dp"
            android:layout_marginTop="16dp"
            android:background="@color/verdeBotones"
            android:fontFamily="@font/nunito_sans_extrabold"
            android:text="@string/txt_registrarse"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bt_misiones"
            app:layout_constraintVertical_bias="0.29000002" />


        <ImageView
            android:id="@+id/imagePlanet2"
            android:layout_width="73dp"
            android:layout_height="68dp"
            android:layout_marginStart="40dp"
            android:src="@drawable/planeta_tierra_boton"
            app:layout_constraintBottom_toBottomOf="@+id/bt_registro_actividad"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/bt_registro_actividad" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>