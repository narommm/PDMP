<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Login">

   <androidx.constraintlayout.widget.ConstraintLayout
       android:id="@+id/login"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:background="@drawable/fondo_principal">

      <ImageView
          android:id="@+id/personaje_principal_view"
          android:layout_width="290dp"
          android:layout_height="160dp"
          android:layout_marginTop="176dp"
          android:src="@drawable/personaje_principal"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent" />

      <TextView
          android:id="@+id/text_name_aplication"
          style="@style/textGame"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:fontFamily="@font/nunito_sans_extrabold"
          android:text="@string/name_game"
          android:textColor="@android:color/background_light"
          android:textSize="@dimen/medium_35_sp"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/personaje_principal_view" />

      <EditText
          android:id="@+id/etxt_nickname"
          style="@style/textGame"
          android:layout_width="259dp"
          android:layout_height="52dp"
          android:layout_marginTop="60dp"
          android:background="@color/moradoRelleno"
          android:hint="Nickname"
          android:textColor="@color/blanco"
          android:textSize="@dimen/medium_35_sp"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/text_name_aplication" />

      <EditText
          android:id="@+id/etxt_password"
          style="@style/textGame"
          android:layout_width="259dp"
          android:layout_height="52dp"
          android:background="@color/moradoRelleno"
          android:hint="Password"
          android:inputType="textPassword"
          android:textColor="@color/blanco"
          android:textSize="@dimen/medium_35_sp"
          app:layout_constraintBottom_toTopOf="@+id/btn_registrarse_action"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/etxt_nickname"
          app:layout_constraintVertical_bias="0.365" />

      <Button
          android:id="@+id/btn_registrarse_action"
          style="@style/textGame"
          android:layout_width="237dp"
          android:layout_height="54dp"
          android:layout_marginBottom="40dp"
          android:background="@color/verdeBotones"
          android:text="@string/txt_registrarse"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent" />

      <ImageView
          android:id="@+id/imageView"
          android:layout_width="79dp"
          android:layout_height="69dp"
          android:src="@drawable/planeta_tierra_boton"
          app:layout_constraintBottom_toBottomOf="@+id/btn_registrarse_action"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="@+id/btn_registrarse_action" />

   </androidx.constraintlayout.widget.ConstraintLayout>



</layout>