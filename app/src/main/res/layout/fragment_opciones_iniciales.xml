<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".opciones_iniciales">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/constraint_layout"
        android:background="@drawable/fondo_principal">

        <ImageView
            android:id="@+id/personaje_principal_view"
            android:layout_width="290dp"
            android:layout_height="160dp"
            android:layout_marginTop="148dp"
            android:src="@drawable/personaje_principal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_name_aplication"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_sans_extrabold"
            android:text="@string/name_game"
            android:textColor="@android:color/background_light"
            android:textSize="@dimen/medium_35_sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/personaje_principal_view" />

        <Button
            android:id="@+id/bt_misiones"
            style="@style/textGame"
            android:layout_width="230dp"
            android:layout_height="47dp"
            android:layout_marginTop="32dp"
            android:background="@color/naranjaBotones"
            android:fontFamily="@font/nunito_sans_extrabold"
            android:text="@string/txt_misiones"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.64"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bt_operaciones" />

        <Button
            android:id="@+id/bt_operaciones"
            style="@style/textGame"
            android:layout_width="230dp"
            android:layout_height="47dp"
            android:layout_marginTop="88dp"
            android:background="@color/naranjaBotones"
            android:fontFamily="@font/nunito_sans_extrabold"
            android:text="@string/txt_operaciones"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.64"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_name_aplication" />

        <Button
            android:id="@+id/bt_registro_actividad"
            android:layout_width="230dp"
            android:layout_height="47dp"
            android:layout_marginTop="16dp"
            android:background="@color/naranjaBotones"
            android:fontFamily="@font/nunito_sans_extrabold"
            android:text="@string/btn_txt_registro"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.64"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bt_misiones"
            app:layout_constraintVertical_bias="0.194" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="63dp"
            android:layout_height="58dp"
            android:src="@drawable/planeta_marte"
            app:layout_constraintBottom_toBottomOf="@+id/bt_operaciones"
            app:layout_constraintEnd_toStartOf="@+id/bt_operaciones"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/bt_operaciones"
            app:layout_constraintVertical_bias="1.0" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="63dp"
            android:layout_height="58dp"
            android:src="@drawable/planeta_marte"
            app:layout_constraintBottom_toBottomOf="@+id/bt_misiones"
            app:layout_constraintEnd_toStartOf="@+id/bt_misiones"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/bt_misiones" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="63dp"
            android:layout_height="58dp"
            android:src="@drawable/planeta_marte"
            app:layout_constraintBottom_toBottomOf="@+id/bt_registro_actividad"
            app:layout_constraintEnd_toStartOf="@+id/bt_registro_actividad"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/bt_registro_actividad" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>