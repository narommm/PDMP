<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".opciones_iniciales">



    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/opcionesIniciales"
        android:background="@drawable/fondo_pantalla_principal">

        <ImageView
            android:id="@+id/personaje_principal_view"
            android:layout_width="290dp"
            android:layout_height="160dp"
            android:layout_marginTop="148dp"
            android:src="@drawable/personaje_principal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_name_aplication"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_sans_extrabold"
            android:text="@string/name_game"
            android:textColor="@android:color/background_light"
            android:textSize="@dimen/medium_35_sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/personaje_principal_view" />

        <ImageView
            android:id="@+id/bt_operaciones"
            android:layout_width="354dp"
            android:layout_height="92dp"
            android:layout_marginTop="56dp"
            android:src="@drawable/btn_operaciones"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.491"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_name_aplication" />

        <ImageView
            android:id="@+id/bt_misiones"
            android:layout_width="354dp"
            android:layout_height="92dp"
            android:src="@drawable/btn_misiones"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.491"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bt_operaciones" />

        <ImageView
            android:id="@+id/bt_registro"
            android:layout_width="354dp"
            android:layout_height="92dp"
            android:src="@drawable/btn_registro"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bt_misiones"
            app:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>



</layout>