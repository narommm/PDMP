<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".operaciones_basicas">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/operacionesBasicas"
        android:background="@drawable/fondo_principal">


        <ImageView
            android:id="@+id/opcion_suma"
            android:layout_width="@dimen/size_signo_w"
            android:layout_height="@dimen/size_signo_h"
            android:layout_marginStart="36dp"
            android:layout_marginTop="320dp"
            android:src="@drawable/signo_suma"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/opcion_resta"
            android:layout_width="@dimen/size_signo_w"
            android:layout_height="@dimen/size_signo_w"
            android:layout_marginTop="308dp"
            android:src="@drawable/signo_resta"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/opcion_suma"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/opcion_multiplicacion"
            android:layout_width="@dimen/size_signo_w"
            android:layout_height="@dimen/size_signo_w"
            android:layout_marginStart="36dp"
            android:src="@drawable/signo_multiplicacion"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/opcion_suma"
            app:layout_constraintVertical_bias="0.298" />

        <ImageView
            android:id="@+id/opcion_division"
            android:layout_width="@dimen/size_signo_w"
            android:layout_height="@dimen/size_signo_h"
            android:src="@drawable/signo_division"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/opcion_multiplicacion"
            app:layout_constraintTop_toBottomOf="@+id/opcion_resta"
            app:layout_constraintVertical_bias="0.252" />

        <ImageView
            android:id="@+id/imageView27"
            android:layout_width="159dp"
            android:layout_height="161dp"
            android:src="@drawable/personaje_cabeza"
            app:layout_constraintBottom_toTopOf="@+id/opcion_resta"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.567"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/imageView28"
            android:layout_width="194dp"
            android:layout_height="213dp"
            android:src="@drawable/cuadro_dialogo_2"
            app:layout_constraintBottom_toTopOf="@+id/opcion_suma"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/txt_view_1"
            style="@style/textIndicaciones"
            android:layout_width="114dp"
            android:layout_height="136dp"
            android:text="¿Qué quieres aprender hoy?"
            android:textColor="@color/negro"
            app:layout_constraintBottom_toBottomOf="@+id/imageView28"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.099"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageView28"
            app:layout_constraintVertical_bias="0.134" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>