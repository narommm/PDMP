            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.462"
            app:layout_constraintStart_toEndOf="@+id/naranja_"
            app:layout_constraintTop_toBottomOf="@+id/naranja_4"
            app:layout_constraintVertical_bias="0.166" />

        <ImageView
            android:id="@+id/naranja_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="100dp"
            android:src="@drawable/naranja"
            app:layout_constraintStart_toEndOf="@+id/manzana_1"
            app:layout_constraintTop_toBottomOf="@+id/txt_unidad" />

