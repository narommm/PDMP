            app:layout_constraintTop_toBottomOf="@+id/indicacion_1" />

        <ImageView
            android:id="@+id/naranja_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="44dp"
            android:src="@drawable/naranja"
            app:layout_constraintStart_toEndOf="@+id/naranja_9"
            app:layout_constraintTop_toBottomOf="@+id/indicacion_1" />

        <ImageView
            android:id="@+id/naranja_11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="44dp"
            android:src="@drawable/naranja"
            app:layout_constraintStart_toEndOf="@+id/naranja_10"
            app:layout_constraintTop_toBottomOf="@+id/indicacion_1" />

        <ImageView
            android:id="@+id/naranja_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="112dp"
            android:src="@drawable/naranja"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/manzana_3"
            app:layout_constraintTop_toBottomOf="@+id/naranja_10" />

        <ImageView
            android:id="@+id/naranja_7"
            android:layout_width="wrap_content"
