            android:layout_marginStart="60dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/naranja"
            app:layout_constraintBottom_toTopOf="@+id/naranja_3"
            app:layout_constraintStart_toEndOf="@+id/manzana_1"
